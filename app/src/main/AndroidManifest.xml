<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Déclaration de l'attribution pour éviter les erreurs de logs sur Android 11+ -->
    <attribution android:tag="org.nihongo.mochi" android:label="@string/app_name" />

    <application
        android:name=".MochiApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/nihongomochi"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/nihongomochi"
        android:supportsRtl="true"
        android:theme="@style/Theme.NihongoMochi">
        
        <meta-data android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/game_services_project_id" />
            
        <activity
            android:name="org.nihongo.mochi.MainActivity"
            android:exported="true"
            android:resizeableActivity="true"
            android:theme="@style/Theme.NihongoMochi.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Required for AppCompatDelegate.setApplicationLocales() backward compatibility on Android < 13 -->
        <!-- ENABLED set to TRUE to allow auto-storage of locales -->
        <service
            android:name="androidx.appcompat.app.AppLocalesMetadataHolderService"
            android:enabled="true"
            android:exported="false">
            <meta-data
                android:name="autoStoreLocales"
                android:value="true" />
        </service>

    </application>

</manifest>