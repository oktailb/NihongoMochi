<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background"
    tools:context=".ui.reading.ReadingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reading_title"
            android:textSize="34sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/reading_subtitle" />

        <!-- Japanese Language Proficiency Test -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recognition_jlpt"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@android:drawable/ic_dialog_info" />
        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5">

            <Button
                android:id="@+id/button_reading_n5"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/leaf_green"
                tools:text="N5\n0%" />
            <Button
                android:id="@+id/button_reading_n4"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/leaf_green"
                tools:text="N4\n0%" />
            <Button
                android:id="@+id/button_reading_n3"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/leaf_green"
                tools:text="N3\n0%" />
            <Button
                android:id="@+id/button_reading_n2"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/leaf_green"
                tools:text="N2\n0%" />
            <Button
                android:id="@+id/button_reading_n1"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/leaf_green"
                tools:text="N1\n0%" />
        </GridLayout>

        <!-- Mots les plus utilisés -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/writing_most_used_words"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@android:drawable/ic_dialog_info" />
        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4">

            <Button
                android:id="@+id/button_words_1000"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/leaf_green"
                tools:text="1000\n0%" />
            <Button
                android:id="@+id/button_words_2000"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/leaf_green"
                tools:text="2000\n0%" />
            <Button
                android:id="@+id/button_words_3000"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/leaf_green"
                tools:text="3000\n0%" />
            <Button
                android:id="@+id/button_words_4000"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/leaf_green"
                tools:text="4000\n0%" />
            <Button
                android:id="@+id/button_words_5000"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/leaf_green"
                tools:text="5000\n0%" />
            <Button
                android:id="@+id/button_words_6000"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/leaf_green"
                tools:text="6000\n0%" />
            <Button
                android:id="@+id/button_words_7000"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/leaf_green"
                tools:text="7000\n0%" />
            <Button
                android:id="@+id/button_words_8000"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:backgroundTint="@color/leaf_green"
                tools:text="8000\n0%" />

        </GridLayout>

        <!-- Liste de l'utilisateurs / listes d'étude -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/writing_user_lists"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@android:drawable/ic_dialog_info" />
        </RelativeLayout>

        <Button
            android:id="@+id/button_user_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/leaf_green"
            tools:text="Liste de l'utilisateur\n0%" />

    </LinearLayout>
</ScrollView>