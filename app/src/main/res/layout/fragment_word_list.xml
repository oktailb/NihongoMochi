<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    tools:context=".ui.wordlist.WordListFragment">

    <TextView
        android:id="@+id/text_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Common Words 1000" />

    <LinearLayout
        android:id="@+id/filter_options"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/text_list_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:id="@+id/checkbox_kanji_only"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColor"
            android:text="@string/reading_kanji_solo" />

        <CheckBox
            android:id="@+id/checkbox_simple_words"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColor"
            android:text="@string/reading_simple_words" />

        <CheckBox
            android:id="@+id/checkbox_compound_words"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColor"
            android:text="@string/reading_compound_words" />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinner_word_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/filter_options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
        
    <CheckBox
        android:id="@+id/checkbox_ignore_known"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="?android:attr/textColor"
        android:text="@string/reading_ignore_known_words"
        app:layout_constraintTop_toBottomOf="@id/spinner_word_type"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toBottomOf="@id/checkbox_ignore_known"
        app:layout_constraintBottom_toTopOf="@+id/bottom_controls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/words_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacing="0dp"
            app:lineSpacing="0dp" />

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/pagination_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button_prev_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_previous"
                android:contentDescription="@string/my_image_description"
                app:tint="?android:attr/textColorPrimary"/>

            <TextView
                android:id="@+id/text_pagination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                tools:text="1..62 / 996" />

            <ImageView
                android:id="@+id/button_next_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_next"
                android:contentDescription="@string/my_image_description"
                app:tint="?android:attr/textColorPrimary"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_play"
            android:layout_width="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="?attr/colorSecondary"
            android:text="@string/game_recap_play"
            android:layout_height="200dp"
            android:textSize="48sp"
            android:textStyle="bold"
            android:elevation="32dp"
            android:stateListAnimator="@null"
            android:translationZ="16dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>