<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    tools:context=".ui.dictionary.KanjiDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Kanji Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">
            
            <TextView
                android:id="@+id/text_kanji_large"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="æ¼¢"
                android:textSize="80sp"
                android:textColor="?attr/colorPrimary"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

        <!-- Meanings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEANINGS"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp"/>
            
        <TextView
            android:id="@+id/text_meanings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="China, Sino-"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="32dp"/>

        <!-- Readings Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="READINGS"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

        <!-- Readings Table Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- ON Readings Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_reading_column"
                android:padding="8dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ON (Chinese)"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>
                
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_on_readings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_reading"/>
            </LinearLayout>

            <!-- KUN Readings Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_reading_column"
                android:padding="8dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KUN (Japanese)"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_kun_readings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_reading"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>