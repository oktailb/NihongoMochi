<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    tools:context=".ui.dictionary.KanjiDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Kanji Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">
            
            <TextView
                android:id="@+id/text_kanji_large"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="漢"
                android:textSize="80sp"
                android:textColor="?attr/colorPrimary"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

        <!-- Meanings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEANINGS"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp"/>
            
        <TextView
            android:id="@+id/text_meanings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="China, Sino-"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Kanji Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- JLPT -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JLPT"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"/>
                <TextView
                    android:id="@+id/text_jlpt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N5"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Grade -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GRADE"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"/>
                <TextView
                    android:id="@+id/text_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Strokes -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STROKES"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"/>
                <TextView
                    android:id="@+id/text_strokes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Components Section -->
        <LinearLayout
            android:id="@+id/layout_components_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kanji_detail_components"
                android:letterSpacing="0.1"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="8dp"/>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp"
                android:background="@drawable/bg_reading_column">

                <TextView
                    android:id="@+id/text_structure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginEnd="16dp"
                    tools:text="⿱"/>

                <LinearLayout
                    android:id="@+id/layout_components_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

            </LinearLayout>
        </LinearLayout>

        <!-- Readings Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="READINGS"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

        <!-- Readings Table Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="24dp">

            <!-- ON Readings Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_reading_column"
                android:padding="8dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ON (Chinese)"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>
                
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_on_readings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_reading"/>
            </LinearLayout>

            <!-- KUN Readings Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_reading_column"
                android:padding="8dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KUN (Japanese)"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_kun_readings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_reading"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Examples Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXAMPLES"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_examples"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            tools:itemCount="3"
            tools:listitem="@layout/item_example"/>

    </LinearLayout>
</ScrollView>