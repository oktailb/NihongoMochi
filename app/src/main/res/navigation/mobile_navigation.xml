<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="org.nihongo.mochi.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_home_to_nav_dictionary"
            app:destination="@id/nav_dictionary" />
        <action
            android:id="@+id/action_nav_home_to_nav_options"
            app:destination="@id/nav_settings" />
        <action
            android:id="@+id/action_nav_home_to_nav_results"
            app:destination="@id/nav_results" />
        <action
            android:id="@+id/action_nav_home_to_nav_about"
            app:destination="@id/nav_about" />
        <action
            android:id="@+id/action_nav_home_to_game_recap"
            app:destination="@id/nav_game_recap" />
        <action
            android:id="@+id/action_nav_home_to_writing_recap"
            app:destination="@id/nav_writing_recap" />
        <action
            android:id="@+id/action_nav_home_to_word_list"
            app:destination="@id/nav_word_list" />
        <action
            android:id="@+id/action_nav_home_to_nav_hiragana"
            app:destination="@id/nav_hiragana" />
        <action
            android:id="@+id/action_nav_home_to_nav_katakana"
            app:destination="@id/nav_katakana" />
        <action
            android:id="@+id/action_nav_home_to_grammar"
            app:destination="@id/nav_grammar" />
        <action
            android:id="@+id/action_nav_home_to_games"
            app:destination="@id/nav_games" />
    </fragment>

    <fragment
        android:id="@+id/nav_games"
        android:name="org.nihongo.mochi.ui.games.GamesFragment"
        android:label="Games"
        tools:layout="@layout/fragment_games">
        <action
            android:id="@+id/action_nav_games_to_nav_memorize"
            app:destination="@id/nav_memorize" />
        <action
            android:id="@+id/action_nav_games_to_nav_simon"
            app:destination="@id/nav_simon" />
        <action
            android:id="@+id/action_nav_games_to_nav_taquin"
            app:destination="@id/nav_taquin" />
    </fragment>

    <fragment
        android:id="@+id/nav_memorize"
        android:name="org.nihongo.mochi.ui.games.MemorizeFragment"
        android:label="Memorize"
        tools:layout="@layout/fragment_games" />

    <fragment
        android:id="@+id/nav_simon"
        android:name="org.nihongo.mochi.ui.games.SimonFragment"
        android:label="Simon"
        tools:layout="@layout/fragment_games" />

    <fragment
        android:id="@+id/nav_taquin"
        android:name="org.nihongo.mochi.ui.games.TaquinFragment"
        android:label="Taquin"
        tools:layout="@layout/fragment_games" />

    <fragment
        android:id="@+id/nav_hiragana"
        android:name="org.nihongo.mochi.ui.gojuon.HiraganaFragment"
        android:label="@string/level_hiragana"
        tools:layout="@layout/fragment_kana">
        <action
            android:id="@+id/action_nav_hiragana_to_hiragana_quiz"
            app:destination="@id/hiragana_quiz_fragment" />
    </fragment>

    <fragment
        android:id="@+id/hiragana_quiz_fragment"
        android:name="org.nihongo.mochi.ui.gojuon.HiraganaQuizFragment"
        android:label="Hiragana Quiz"
        tools:layout="@layout/fragment_kana_quiz" />

    <fragment
        android:id="@+id/nav_katakana"
        android:name="org.nihongo.mochi.ui.gojuon.KatakanaFragment"
        android:label="@string/level_katakana"
        tools:layout="@layout/fragment_kana">
        <action
            android:id="@+id/action_nav_katakana_to_katakana_quiz"
            app:destination="@id/katakana_quiz_fragment" />
    </fragment>

    <fragment
        android:id="@+id/katakana_quiz_fragment"
        android:name="org.nihongo.mochi.ui.gojuon.KatakanaQuizFragment"
        android:label="Katakana Quiz"
        tools:layout="@layout/fragment_kana_quiz" />

    <fragment
        android:id="@+id/nav_dictionary"
        android:name="org.nihongo.mochi.ui.dictionary.DictionaryFragment"
        android:label="@string/menu_dictionary"
        tools:layout="@layout/fragment_dictionary">
        <action
            android:id="@+id/action_dictionary_to_kanji_detail"
            app:destination="@id/nav_kanji_detail" />
    </fragment>

    <fragment
        android:id="@+id/nav_kanji_detail"
        android:name="org.nihongo.mochi.ui.dictionary.KanjiDetailFragment"
        android:label="Kanji Detail"
        tools:layout="@layout/fragment_kanji_detail">
        <argument
            android:name="kanjiId"
            app:argType="string" />
        <action
            android:id="@+id/action_kanji_detail_to_kanji_detail"
            app:destination="@id/nav_kanji_detail" />
    </fragment>

    <fragment
        android:id="@+id/nav_settings"
        android:name="org.nihongo.mochi.ui.settings.SettingsFragment"
        android:label="@string/settings_title"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/nav_results"
        android:name="org.nihongo.mochi.ui.results.ResultsFragment"
        android:label="@string/menu_results"
        tools:layout="@layout/fragment_results" />

    <fragment
        android:id="@+id/nav_about"
        android:name="org.nihongo.mochi.ui.about.AboutFragment"
        android:label="@string/menu_about"
        tools:layout="@layout/fragment_about" />

    <fragment
        android:id="@+id/nav_game_recap"
        android:name="org.nihongo.mochi.ui.gamerecap.GameRecapFragment"
        android:label="@string/title_game_recap"
        tools:layout="@layout/fragment_game_recap">
        <argument
            android:name="level"
            app:argType="string" />
        <action
            android:id="@+id/action_game_recap_to_recognition_game"
            app:destination="@id/nav_recognition_game" />
        <action
            android:id="@+id/action_game_recap_to_kanji_detail"
            app:destination="@id/nav_kanji_detail" />
    </fragment>

    <fragment
        android:id="@+id/nav_writing_recap"
        android:name="org.nihongo.mochi.ui.writingrecap.WritingRecapFragment"
        android:label="@string/title_writing_recap"
        tools:layout="@layout/fragment_writing_recap">
        <argument
            android:name="level"
            app:argType="string" />
        <action
            android:id="@+id/action_writing_recap_to_writing_game"
            app:destination="@id/nav_writing_game" />
        <action
            android:id="@+id/action_writing_recap_to_kanji_detail"
            app:destination="@id/nav_kanji_detail" />
    </fragment>

    <fragment
        android:id="@+id/nav_recognition_game"
        android:name="org.nihongo.mochi.ui.recognitiongame.RecognitionGameFragment"
        android:label="@string/game_recap_title"
        tools:layout="@layout/fragment_recognition_game">
        <argument
            android:name="level"
            app:argType="string"
            android:defaultValue="N5" />
        <argument
            android:name="gameMode"
            app:argType="string"
            android:defaultValue="meaning" />
        <argument
            android:name="readingMode"
            app:argType="string"
            android:defaultValue="common" />
        <argument
            android:name="customWordList"
            app:argType="string[]"
            app:nullable="true"
            android:defaultValue="@null"/>
    </fragment>

    <fragment
        android:id="@+id/nav_writing_game"
        android:name="org.nihongo.mochi.ui.writinggame.WritingGameFragment"
        android:label="Writing Game"
        tools:layout="@layout/fragment_writing_game">
        <argument
            android:name="level"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="kanjiList"
            app:argType="string[]"
            app:nullable="true"
            android:defaultValue="@null"/>
    </fragment>

    <fragment
        android:id="@+id/nav_word_list"
        android:name="org.nihongo.mochi.ui.wordlist.WordListFragment"
        android:label="Word List"
        tools:layout="@layout/fragment_word_list">
        <argument
            android:name="wordList"
            app:argType="string" />
        <action
            android:id="@+id/action_nav_word_list_to_nav_word_quiz"
            app:destination="@id/nav_word_quiz" />
    </fragment>

    <fragment
        android:id="@+id/nav_word_quiz"
        android:name="org.nihongo.mochi.ui.wordquiz.WordQuizFragment"
        android:label="Word Quiz"
        tools:layout="@layout/fragment_word_quiz">
        <argument
            android:name="customWordList"
            app:argType="string[]"
            app:nullable="true"
            android:defaultValue="@null"/>
    </fragment>

    <fragment
        android:id="@+id/nav_grammar"
        android:name="org.nihongo.mochi.ui.grammar.GrammarFragment"
        android:label="Grammar"
        tools:layout="@layout/fragment_grammar">
        <argument
            android:name="levelId"
            app:argType="string" />
    </fragment>

</navigation>
